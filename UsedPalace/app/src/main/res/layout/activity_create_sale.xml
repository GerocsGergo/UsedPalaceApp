<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Oldal címe -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hirdetés létrehozása"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Kép feltöltés -->
        <LinearLayout
            android:id="@+id/uploadVerticalLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/pageTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Kép hozzáadása" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imageRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Hirdetés címe -->
        <TextView
            android:id="@+id/saleNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hirdetés címe (max. 50 karakter)"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@id/uploadVerticalLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputSaleNameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/saleNameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputSaleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cím"
                android:maxLength="50"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Hirdetés leírása -->
        <TextView
            android:id="@+id/saleDescText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hirdetés leírása (max. 200 karakter)"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@id/inputSaleNameLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputDescLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/saleDescText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Leírás"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:maxLines="4"
                android:maxLength="200"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Termék ára -->
        <TextView
            android:id="@+id/saleCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Termék ára"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@id/inputDescLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputCostLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/saleCostText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ár (Ft)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Kategória választás -->
        <TextView
            android:id="@+id/saleCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategória"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@id/inputCostLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <Spinner
            android:id="@+id/mainCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/saleCategoryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Alkategória -->
        <TextView
            android:id="@+id/subCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alkategória"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@id/mainCategory"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <Spinner
            android:id="@+id/subCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/subCategoryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Létrehozás gomb -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/createSale"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="Létrehozás"
            android:textSize="18sp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/subCategoryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Létrehozás gomb -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBack"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="Vissza"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/createSale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
