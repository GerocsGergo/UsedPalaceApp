<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".profileMenus.ownSalesActivity.OwnSalesActivity">

    <!-- Vissza gomb bal fent -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vissza"
        android:textColor="@color/colorText"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="12dp"
        app:icon="@drawable/baseline_arrow_back_24"
        app:iconPadding="8dp"
        app:iconTint="@color/colorText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Fő oldal neve, középen -->
    <TextView
        android:id="@+id/pageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hirdetéseid"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView a hirdetésekhez -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOwnSales"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/pageName"
        app:layout_constraintBottom_toTopOf="@id/paginationLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_own_sales"/>

    <!-- "Nincs hirdetés" üzenet -->
    <TextView
        android:id="@+id/noSalesMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nincs hirdetésed."
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/pageName"
        app:layout_constraintBottom_toTopOf="@id/paginationLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pagination Buttons, mindig alul -->
    <LinearLayout
        android:id="@+id/paginationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/colorBackground"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prevPageButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
            android:text="Előző"/>

        <TextView
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 1"
            android:padding="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextPageButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
            android:text="Következő"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
