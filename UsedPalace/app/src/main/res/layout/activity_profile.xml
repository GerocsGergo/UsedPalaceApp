<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Felső cím -->
    <TextView
        android:id="@+id/pageName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tartalom scrollozható -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/middle_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pageName"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modifyEmail"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email módosítása"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modifyPassword"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jelszó módosítása"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modifyPhone"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefonszám módosítása"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteUser"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiók törlése"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorBackgroundDelete"
                android:textColor="@color/colorTextButton" />

            <TextView
                android:id="@+id/userFullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Név: "
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefon: "
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Alsó vissza gomb -->
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBack"
            style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Vissza" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
