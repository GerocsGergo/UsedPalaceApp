<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".login.ResetPasswordActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/usedPalace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UsedPalace"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/resetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelszó változtatás"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/usedPalace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Új jelszó:"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/resetPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Írd be az új jelszavad"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelszó újra:"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/inputPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputRePassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Írd be újra a jelszót"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kód:"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/inputRePassword"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputCode"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Írd be a 6 jegyű kódot"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:inputType="number"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Tovább"
        android:textColor="@color/colorTextButton"
        android:textSize="18sp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/inputCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_background" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>