<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".fragments.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <!-- Profil ikon kör alakú háttérrel -->
                <ImageButton
                    android:id="@+id/profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/baseline_person_40"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Profil"
                    android:scaleType="centerCrop"/>

                <!-- Username TextView -->
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Felhasználónév"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kijelentkezés"
                android:backgroundTint="@color/colorBackgroundDelete"
                android:layout_marginBottom="12dp" />

            <!-- Profil szekció -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hirdetések"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:layout_marginBottom="16dp" />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/createSale"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajánlat létrehozása"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ownSales"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hirdetéseid"
                android:layout_marginBottom="24dp" />

            <!-- Segítség szekció -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segítség"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/help"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Súgó"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beállítások"
                android:visibility="gone"

                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/support"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elérhetőségeink"
                android:layout_marginBottom="24dp" />

            <!-- Egyéb szekció -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egyéb"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/about"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A UsedPalace-ről"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/contacts"
                style="@style/Widget.Material3.Button.UsedPalace.ProfileMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Információk"
                android:layout_marginBottom="12dp" />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
