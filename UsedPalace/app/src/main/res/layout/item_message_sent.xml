<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginEnd="8dp"
    	    android:layout_marginTop="16dp">


    <TextView
        android:id="@+id/date_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aug 5."
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="20dp"
		android:textSize="15sp"
		android:textColor="#C0C0C0"
		/>

	<androidx.cardview.widget.CardView
		android:id="@+id/messages_cardView_me"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/date_me"
		app:cardBackgroundColor="#774df2"
		app:cardCornerRadius="12dp"
		app:cardElevation="0dp"
		app:cardPreventCornerOverlap="false"
		app:cardUseCompatPadding="true">

		<LinearLayout
			android:id="@+id/messages_container_me"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">


			<TextView
				android:id="@+id/message_me"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="example message"
				android:maxWidth="260dp"
				android:paddingLeft="12dp"
				android:paddingTop="8dp"
				android:paddingRight="12dp"
				android:textColor="#ffffff"
				android:textSize="16sp"
				android:layout_marginBottom="8dp"
				/>


		</LinearLayout>

	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/text_timestamp_me"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="10:00"
		android:textColor="#C0C0C0"
		android:textSize="10sp"
		app:layout_constraintBottom_toBottomOf="@+id/messages_cardView_me"
		app:layout_constraintEnd_toStartOf="@+id/messages_cardView_me" />


</androidx.constraintlayout.widget.ConstraintLayout>