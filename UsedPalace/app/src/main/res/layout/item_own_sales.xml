<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/item_background"
    android:padding="12dp">

    <TextView
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="placeholder"
        android:textSize="20sp"
        android:textColor="@color/colorTextButton"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonGroup"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginStart="8dp">

        <ImageButton
            android:id="@+id/open"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            app:srcCompat="@drawable/baseline_eye_40"
            android:contentDescription="Megnyitás"/>

        <ImageButton
            android:id="@+id/modify"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            app:srcCompat="@drawable/baseline_edit_40"
            android:contentDescription="Szerkesztés"/>

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            app:srcCompat="@drawable/baseline_delete_40"
            android:contentDescription="Törlés"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
