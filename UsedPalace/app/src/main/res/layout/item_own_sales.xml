<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/item_background"
    android:padding="12dp">

    <!-- Termék neve -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Termék neve"
        android:textSize="18sp"
        android:textColor="@color/colorText"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonGroup"
        android:layout_marginEnd="8dp"/>

    <!-- Termék dátuma -->
    <TextView
        android:id="@+id/productDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2025-09-30 14:20"
        android:textSize="14sp"
        android:textColor="@color/colorTextButton"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonGroup"
        android:layout_marginTop="4dp"/>

    <!-- Thumbnail -->
    <ImageView
        android:id="@+id/productThumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:contentDescription="Termék kép"
        app:layout_constraintTop_toBottomOf="@id/productDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Jobb oldali gombok háttérrel -->
    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Megnyitás"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="12dp"
            app:iconPadding="8dp"
            app:icon="@drawable/baseline_eye_40"
            app:iconTint="@color/colorText"
            android:backgroundTint="@color/colorButtonBackground"
            android:textColor="@color/colorText"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Szerkesztés"
            android:backgroundTint="@color/colorButtonBackground"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="12dp"
            app:iconPadding="8dp"
            app:icon="@drawable/baseline_edit_40"
            app:iconTint="@color/colorText"
            android:textColor="@color/colorText"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Törlés"
            android:backgroundTint="@color/colorButtonBackground"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="12dp"
            app:iconPadding="8dp"
            app:icon="@drawable/baseline_delete_40"
            app:iconTint="@color/colorText"
            android:textColor="@color/colorText"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
