<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LogActivity">


    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter your password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_marginEnd="25sp"
        app:layout_constraintTop_toTopOf="@id/password"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelszó újra:"
        android:textSize="20sp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefonszám:"
        android:textSize="20sp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rePassword" />

    <EditText
        android:id="@+id/inputPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter your phonenumber"
        android:inputType="phone"
        android:textSize="20sp"
        android:layout_marginEnd="25sp"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelszó:"
        android:textSize="20sp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
     />

    <EditText
        android:id="@+id/inputRePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter your password again"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_marginEnd="25sp"
        app:layout_constraintTop_toTopOf="@id/rePassword"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/usedPalace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="UsedPalace"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Regisztráció"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usedPalace"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teljes név:"
        android:textSize="20sp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="80sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reg" />

    <EditText
        android:id="@+id/inputUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25sp"
        android:ems="10"
        android:hint="enter your full name"
        android:inputType="text"
        android:maxLength="50"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/name" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter your email"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:layout_marginEnd="25sp"
        app:layout_constraintTop_toTopOf="@id/email"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20sp"
        android:layout_marginTop="60sp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginStart="25sp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/buttonReg"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Regisztráció"
        android:layout_marginBottom="200dp"
        app:layout_constraintStart_toStartOf="@id/usedPalace"
        app:layout_constraintEnd_toEndOf="@id/usedPalace"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vissza"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>